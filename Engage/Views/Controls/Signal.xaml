<!--  Engage.Views.Controls.Signal.xaml  -->
<Page
    x:Class="Engage.Views.Controls.Signal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Engage.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <InfoBar
        Title="{Binding Title}"
        IsClosable="{Binding IsClosable}"
        IsIconVisible="{Binding IsIconVisible}"
        Message="{Binding Message}"
        Severity="{Binding Type}">
        <InfoBar.ActionButton>
            <Button Click="Signal_Click" Content="{Binding ActionContent}" />
        </InfoBar.ActionButton>
    </InfoBar>
</Page>
