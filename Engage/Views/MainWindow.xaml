<!--  Engage.Views.MainWindow.xaml  -->
<Window
    x:Class="Engage.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <NavigationView
            Grid.Row="0"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            IsSettingsVisible="False"
            PaneDisplayMode="Top" />

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal">

                <TextBlock
                    x:Name="AppTitle"
                    Margin="20,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="Engage" />

                <MenuBar>
                    <MenuBarItem Title="File" />

                    <MenuBarItem Title="Edit" />

                    <MenuBarItem Title="View" />

                    <MenuBarItem Title="Help">
                        <MenuFlyoutItem Text="About" />
                    </MenuBarItem>

                    <MenuBarItem Title="Developer">
                        <MenuFlyoutSubItem Text="Events">
                            <MenuFlyoutItem
                                x:Name="DevSendAlert"
                                Click="DevSendAlert_Click"
                                Text="Send Alert" />
                        </MenuFlyoutSubItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Text="Contribute" />
                    </MenuBarItem>
                </MenuBar>
            </StackPanel>

            <AutoSuggestBox
                Width="225"
                Height="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                PlaceholderText="Search"
                QueryIcon="Find" />
        </Grid>

        <NavigationView
            x:Name="MainNavigationView"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            IsSettingsVisible="True"
            IsTabStop="True"
            OpenPaneLength="200"
            PaneDisplayMode="LeftCompact"
            SelectionChanged="MainNavigationView_SelectionChanged"
            ShoulderNavigationEnabled="Always">

            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Home"
                    Icon="Home"
                    Tag="Home" />
                <NavigationViewItem
                    Content="Chat"
                    Icon="Comment"
                    Tag="Chat" />
            </NavigationView.MenuItems>

            <Frame x:Name="MainFrame" />
        </NavigationView>

        <Grid
            x:Name="AppTitleBar"
            Width="128"
            Height="48"
            HorizontalAlignment="Right" />

    </Grid>

</Window>


